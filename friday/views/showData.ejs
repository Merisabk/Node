<html>
    <table border="1">
        <tr>
            <td>Employee ID </td>
            <td>Name </td>
            <td>Salary </td>
            <td>Tax</td>
            <td>Net Salary</td>
            <td>Department</td>
            <td>Operations</td>
        </tr>


<%      let i =0;
        employees.forEach(function(data){ %>
            <tr>
                <td> <%= data.empno %> </td>
                <td> <%= data.name %>  </td>
                <td> <%= data.salary %>  </td>
                <td> <% if (data.salary >= 2000){
                       tax = (data.salary*0.21) 
                } else { (data.salary < 2000) }
                   tax = (data.salary*0.15) %>
               
               <%= tax %>
                </td>
                <td>
                    <%= (data.salary - tax) %>

                </td> 
            
                <td> <%
                     if(data.deptcode == 1) {
                        deptname="HR"    
                    }
                    if (data.deptcode == 2){
                        deptname="IT"    
                    }
                    if (data.deptcode == 3){
                        deptname="Sales"    
                    }
                
                 %>
            <%= deptname %> </td>

            <td><a href='http://localhost:4005/deleterecord/ <%= i++ %>'><button>delete</button></a>

                <a href='http://localhost:4005/updaterecord/'><button>update</button></a>
            </td>
            
                
            </tr>

       <% }) %>

%>





    </table>
</html>